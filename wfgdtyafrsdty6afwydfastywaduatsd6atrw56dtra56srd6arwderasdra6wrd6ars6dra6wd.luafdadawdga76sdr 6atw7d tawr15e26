-- Void.UI by ChatGPT, Ã¶zel KRAL versiyonu
local VoidUI = {}

function VoidUI:CreateWindow(config)
	local ScreenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
	ScreenGui.Name = config.Name or "VoidUI_" .. math.random(1000, 9999)

	local Main = Instance.new("Frame", ScreenGui)
	Main.Name = "Main"
	Main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
	Main.Position = UDim2.new(0.3, 0, 0.2, 0)
	Main.Size = UDim2.new(0, 400, 0, 280)
	Main.Active = true
	Main.Draggable = true

	local UICorner = Instance.new("UICorner", Main)
	UICorner.CornerRadius = UDim.new(0, 10)

	local UIStroke = Instance.new("UIStroke", Main)
	UIStroke.Color = Color3.fromRGB(70, 70, 255)
	UIStroke.Thickness = 2
	UIStroke.Transparency = 0.2

	local Title = Instance.new("TextLabel", Main)
	Title.Text = config.Title or "Void.UI"
	Title.Size = UDim2.new(1, 0, 0, 40)
	Title.TextColor3 = Color3.new(1, 1, 1)
	Title.BackgroundTransparency = 1
	Title.Font = Enum.Font.GothamBold
	Title.TextScaled = true

	local TabHolder = Instance.new("Frame", Main)
	TabHolder.Name = "TabHolder"
	TabHolder.BackgroundTransparency = 1
	TabHolder.Size = UDim2.new(1, 0, 0, 30)
	TabHolder.Position = UDim2.new(0, 0, 0, 50)

	local ContentHolder = Instance.new("Frame", Main)
	ContentHolder.Name = "Content"
	ContentHolder.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
	ContentHolder.Position = UDim2.new(0, 10, 0, 90)
	ContentHolder.Size = UDim2.new(1, -20, 1, -100)

	local ContentCorner = Instance.new("UICorner", ContentHolder)
	ContentCorner.CornerRadius = UDim.new(0, 8)

	local UIPageLayout = Instance.new("UIPageLayout", ContentHolder)
	UIPageLayout.EasingStyle = Enum.EasingStyle.Quad
	UIPageLayout.FillDirection = Enum.FillDirection.Horizontal
	UIPageLayout.TweenTime = 0.35
	UIPageLayout.Padding = UDim.new(0, 5)
	UIPageLayout.SortOrder = Enum.SortOrder.LayoutOrder

	local Tabs = {}

	function VoidUI:AddTab(tabName)
		local Button = Instance.new("TextButton", TabHolder)
		Button.Text = tabName
		Button.Size = UDim2.new(0, 100, 0, 30)
		Button.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
		Button.TextColor3 = Color3.fromRGB(255, 255, 255)
		Button.Font = Enum.Font.Gotham
		Button.TextScaled = true

		local TabPage = Instance.new("Frame", ContentHolder)
		TabPage.Name = tabName
		TabPage.BackgroundTransparency = 1
		TabPage.Size = UDim2.new(1, 0, 1, 0)

		Button.MouseButton1Click:Connect(function()
			UIPageLayout:JumpTo(TabPage)
		end)

		Tabs[tabName] = TabPage
		return TabPage
	end

	return VoidUI
end

return VoidUI
